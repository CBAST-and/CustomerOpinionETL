{
    "ConnectionStrings": {
        "AnalyticsDb": "Server=localhost;Database=CustomerOpinionAnalytics;Trusted_Connection=True;TrustServerCertificate=True;",
        "SourceDb": "Server=localhost;Database=EcommerceSource;Trusted_Connection=True;TrustServerCertificate=True;"
    },

    "ETL": {
        "DataSources": {

            "CSV": {
                "CsvFolderPath": "./data",
                "Description": "Lee archivos CSV de encuestas internas. Los archivos de dimensiones (clients.csv, products.csv, fuente_datos.csv) se cargan primero, luego las opiniones."
            },

            "Database": {
                "ConnectionString": "Server=localhost;Database=EcommerceSource;Trusted_Connection=True;TrustServerCertificate=True;",
                "Query": "SELECT IdReview, IdCliente, IdProducto, Fecha, Comentario, Rating, IsVerified FROM WebReviews WHERE Fecha >= @StartDate",
                "StartDate": "2024-01-01",
                "TimeoutSeconds": 60,
                "Description": "Extrae rese√±as de la base de datos relacional del sitio web de e-commerce."
            },

            "API": {
                "BaseUrl": "http://localhost:5000",
                "Endpoint": "/api/social-comments",
                "ApiKey": "",
                "QueryParameters": "limit=1000&platform=all",
                "TimeoutSeconds": 30,
                "Description": "Consume API REST para obtener comentarios de redes sociales (Twitter, Facebook, Instagram)."
            }
        },

        "Processing": {
            "BatchSize": 100,
            "EnableSentimentAnalysis": true,
            "ParallelProcessing": false,
            "MaxDegreeOfParallelism": 4
        }
    },

    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Warning",
            "Microsoft.Hosting.Lifetime": "Information",
            "System": "Warning",
            "CustomerOpinionETL": "Debug"
        }
    },

    "AllowedHosts": "*"
}